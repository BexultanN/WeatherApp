<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.weatherapp.viewModel.homePage.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_to_weekDetails"
            app:destination="@id/WeekDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.weatherapp.viewModel.newsPage.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.weatherapp.viewModel.searchPage.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.weatherapp.viewModel.settingsPage.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/WeekDetailsFragment"
        android:name="com.example.weatherapp.viewModel.homePage.fragments.WeekDetailsFragment"
        android:label="fragment_today_details"
        tools:layout="@layout/fragment_week_details">
        <action
            android:id="@+id/action_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>