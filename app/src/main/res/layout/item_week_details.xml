<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#FF018685"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/maven_pro_medium"
        android:text="@string/dayOfWeek"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weatherIconPerHour"
        android:layout_width="92dp"
        android:layout_height="78dp"
        android:paddingTop="7dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/cloudy"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/dayTempOfDayWeek"
        card_view:layout_constraintStart_toEndOf="@+id/dayOfWeek"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0"

        tools:ignore="ContentDescription">

    </ImageView>

    <TextView
        android:id="@+id/dayTempOfDayWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="@string/dayTempOfDayWeek"
        android:textColor="@color/white"
        android:textSize="20sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/nightTempOfDayWeek"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nightTempOfDayWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="@string/nightTempOfDayWeek"
        android:textColor="#FFC0C7CD"
        android:textSize="20sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
