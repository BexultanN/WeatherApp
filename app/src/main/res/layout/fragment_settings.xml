<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".view.settingsPage.SettingsFragment">


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/ic_baseline_notifications_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:text="Notifications"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/darkMode_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_baseline_dark_mode_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:text="Dark Mode"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_text"
        tools:ignore="HardcodedText" />


    <!-- temperature format    -->
    <TextView
        android:id="@+id/temperature_format"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"

        android:layout_marginTop="10dp"
        android:drawablePadding="20dp"
        android:fontFamily="@font/maven_pro_medium"
        android:text="Temperature format"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:drawableStartCompat="@drawable/ic_baseline_notifications_24"
        app:layout_constraintEnd_toStartOf="@+id/temperature_format_toggle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darkMode_text"
        tools:ignore="HardcodedText">

    </TextView>

    <ToggleButton
        android:id="@+id/temperature_format_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:text="ToggleButton"
        android:textColor="#455A64"
        android:textOff="°C"
        android:textOn="°F"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/darkMode_text"
        tools:ignore="HardcodedText,TextContrastCheck" />




</androidx.constraintlayout.widget.ConstraintLayout>