<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notification_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/tbselector"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_notifications_24"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/maven_pro_medium"
        android:longClickable="true"
        android:text="Notifications"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/dark_mode_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tbselector"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_dark_mode_24"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/maven_pro_medium"
        android:longClickable="true"
        android:text="Dark Mode"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_switch"
        tools:ignore="HardcodedText,TextContrastCheck" />


    <!-- temperature format    -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/temperature_format"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tbselector"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/maven_pro_medium"
        android:gravity="center"
        android:longClickable="true"
        android:minHeight="48dp"
        android:text="Temperature format"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:drawableStartCompat="@drawable/ic_baseline_notifications_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dark_mode_switch"
        tools:ignore="HardcodedText,TextContrastCheck">

    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/temperature_format_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:backgroundTint="@null"
        android:background="@color/white"
        android:text="Â°C"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/temperature_format"
        app:layout_constraintTop_toBottomOf="@+id/dark_mode_switch"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/send_feedback_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tbselector"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:focusable="true"
        android:fontFamily="@font/maven_pro_medium"
        android:longClickable="true"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="Send us your FeedBack!"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:drawableStartCompat="@drawable/ic_baseline_mail_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temperature_format"
        tools:ignore="HardcodedText,TextContrastCheck">

    </com.google.android.material.textview.MaterialTextView>


</androidx.constraintlayout.widget.ConstraintLayout>