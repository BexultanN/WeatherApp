<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewBlock"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    android:outlineProvider="none"
    card_view:cardBackgroundColor="@color/backgroundTransparent"
    card_view:cardCornerRadius="12dp">

    <TextView
        android:id="@+id/news_header1"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4dp"
        android:text="News"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/news_subtitle"
        android:layout_width="239dp"
        android:layout_height="169dp"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:text="News text, long text with information and so on will be filled soon!"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/weatherIconPerHour"
        android:layout_width="162dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:src="@drawable/"
        tools:ignore="ContentDescription" />


</androidx.cardview.widget.CardView>