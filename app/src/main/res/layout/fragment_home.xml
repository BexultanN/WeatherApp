<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bLueBackground"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:contentDescription="image of current weather"
        android:src="@drawable/sun_cloud_angled_rain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText">

    </ImageView>

    <TextView
        android:id="@+id/today_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        android:textColor="@color/white"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/today_descriptionOfTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature_description"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_temperature" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <View
        android:id="@+id/propertiesBlock"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="18dp"
        android:alpha="30"
        android:background="@drawable/background_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/properties" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:drawablePadding="2dp"
        android:text="6 %"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/humidity"
        app:layout_constraintBottom_toBottomOf="@+id/propertiesBlock"
        app:layout_constraintEnd_toStartOf="@+id/pressure"
        app:layout_constraintTop_toTopOf="@+id/properties" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:text="90%"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/pressure"
        app:layout_constraintBottom_toBottomOf="@+id/propertiesBlock"
        app:layout_constraintEnd_toEndOf="@+id/propertiesBlock"
        app:layout_constraintStart_toStartOf="@+id/propertiesBlock"
        app:layout_constraintTop_toTopOf="@+id/properties" />

    <TextView
        android:id="@+id/windiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawablePadding="2dp"
        android:text="14 km/h"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/windiness"
        app:layout_constraintBottom_toBottomOf="@+id/propertiesBlock"
        app:layout_constraintStart_toEndOf="@+id/pressure"
        app:layout_constraintTop_toTopOf="@+id/properties" />

    <View
        android:id="@+id/todayDetails"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        android:alpha="30"
        android:background="@drawable/background_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propertiesBlock" />


</androidx.constraintlayout.widget.ConstraintLayout>